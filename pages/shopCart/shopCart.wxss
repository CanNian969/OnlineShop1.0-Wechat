.listframe {
    background-color: #fff;
    /* display: flex; */
    margin: 20rpx 20rpx;
}

.shoplist {
    background-color: #fff;
    display: flex;
    /* margin-top: 10rpx; */
}

.shoplist checkbox {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shoplist image {
    flex: 3;
    padding: 20rpx;
}

.shoplist .info {
    flex: 5;
    display: flex;
    position: relative;
}

.shoplist .info .title {
    font-size: 28rpx;
    position: absolute;
    top: 20rpx;
}

.shoplist .info .price {
    position: absolute;
    left: 0;
    bottom: 20rpx;
    color: #f44;
    font-weight: 600;
}

.shoplist .info .num_tool {
    position: absolute;
    right: 0;
    bottom: 20rpx;
    display: flex;
}

.shoplist .info .num_tool .edit_num,
.shoplist .info .num_tool .num {
    border: 2rpx solid #f2f3f5;
    background-color: #f2f3f5;
    width: 56rpx;
    height: 56rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 5rpx;
    font-size: 50rpx;
    color: rgba(0, 0, 0, .6)
}

.shoplist .info .num_tool .num {
    font-size: 30rpx;
}


.shopcart .sel_all {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 90rpx;
    background-color: #fff;
}

.shopcart .sl_a {
    /* width: 100rpx; */
    margin: 30rpx 0;
    float: left;
    display: flex;
    align-items: center;
    justify-content: center;
}

.shopcart .sel_all .money {
    float: right;
    /* margin: 30rpx 0; */
    display: flex;
    justify-content: center;
    align-items: center;
}

.shopcart .sel_all .money .t2 {
    margin: 30rpx 0;
    font-size: 24rpx;
}

.shopcart .sel_all .money .t3 {
    color: #f44;
    font-weight: 600;
    /* height: 100rpx; */

}

.shopcart .sel_all .money .btn {
    width: 192rpx;
    height: 72rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50rpx;
    color: #fff;
    font-size: 28rpx;
    margin: 0 20rpx;
    background-color: #c8c9cc;
}

.shopcart .sel_all .money .btn2 {
    background-color: #FF4444;
}