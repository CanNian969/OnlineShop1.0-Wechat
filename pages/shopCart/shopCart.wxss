/* pages/shop/shop.wxss */
page {
    background-color: #F8F8F8;
}

.empty_cart {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.empty_cart image {
    width: 50%;
    /* display: flex; */
}

.empty_cart .t1 {
    /* display: flex; */
    font-size: 28rpx;
}

.empty_cart .t2 {
    font-size: 28rpx;
    color: #999;
    margin: 10rpx 0;
}

.empty_cart .btn {
    font-weight: 500;
    color: #f44;
    border: 2rpx solid;
    border-radius: 50rpx;
    width: 144rpx;
    height: 60rpx;
    font-size: 28rpx;
    padding: 0;
    margin-top: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.shopcart {
    position: relative;
    height: 60rpx;
    /* display: flex;
    justify-content: center;
    align-items: center; */
    background-color: #F8F8F8;
}

.shopcart .top {
    width: 750rpx;
    height: 60rpx;
    background-color: #fff;
    margin-bottom: 10rpx;
    /* background-color: blue; */
}

.shopcart .top image {
    width: 40rpx;
    margin: 5rpx 20rpx;
}

.shopcart .top .t1 {
    font-size: 32rpx;
    position: absolute;
    top: 0;
}

.shopcart .top .arrow {
    width: 15rpx;
    height: 15rpx;
    border-top: 4rpx solid #999;
    border-right: 4rpx solid #999;
    position: absolute;
    left: 250rpx;
    transform: rotate(45deg);
    margin-top: 15rpx;
}
