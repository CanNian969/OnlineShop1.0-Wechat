/* pages/order/order.wxss */
page {
    background-color: #ebebeb;
}

.order {
    height: 100%;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    flex-direction: column-reverse;
}

.order .external_item {
    background-color: white;
    display: block;
    width: 710rpx;
    /* height: 300rpx; */
    padding: 10rpx 20rpx;
    margin-top: 20rpx;
    /* position: relative; */
}

.order .external_item .order_id {
    font-size: 30rpx;
}

.order .external_item .inner_item {
    display: flex;
    width: 100%;
    height: 170rpx;
    margin: 20rpx 0 0rpx 0;
    position: relative;
}
.order .external_item .inner_item .goods_info {
    margin-top: 10rpx;
}

.order .external_item .inner_item .g_name {
    overflow: auto;
    font-weight: 500;
    font-size: 30rpx;
    margin-left: 20rpx;
}
.order .external_item .inner_item .g_price {
    position: absolute;
    right: 20rpx;
    font-size: 30rpx;
    font-weight: 400;
}
.order .external_item .inner_item .g_num {
    position: absolute;
    right: 20rpx;
    top: 40rpx;
    color: #bbbbbb;
    font-size: 30rpx;
    font-weight: 400;
}
.order .external_item .t_price {
    /* position: absolute; */
    /* height: 100rpx; */
    float: right;
    /* color: red; */
    font-size: 30rpx;
    font-weight: 400;
}