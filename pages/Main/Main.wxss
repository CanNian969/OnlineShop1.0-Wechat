/* pages/Main/Main.wxss */
.page-content{
    width: 750rpx;
    background-color: #F8F8F8;
}
.page-content .ad_img {
    display: block;
    width: 750rpx;
    /* height: 100%; */
    height: 1420rpx;
}

.page-content .cap_img {
    position: relative;
    display: block;
    width: 750rpx;
    height: 370rpx;
}
.page-content .cap_img image {
    position: absolute;
    /* z-index: 0; */
    display: block;
    width: 100%;
}
.page-content .cap_img .cap_img_item {
    position: relative;
    float: left;
    left: 15rpx;
    top: 5rpx;
    z-index: 1;
    margin: 25rpx;
    width: 130rpx;
    height: 130rpx;
    /* background-color: rgba(0, 0, 0, 0.1); */

}


.page-content swiper {
    height: 600rpx;
}

.page-content swiper image {
    width: 100%;
    /* height: 100%; */
}

.up_plate {
    width: 750rpx;
}

.up_plate image {
    width: 100%;
    display: block;
    /* margin-bottom: 40rpx; */
}

.down_plate {
    width: 50%;
    float: left;
    display: flex;
    flex-wrap: wrap;
    padding: 60rpx 0rpx;
    /* text-align: center; */
    /* 适用于flex盒子 */
    justify-content: center;
}

.down_plate image {
    width: 83%;
    /* padding-left: 15rpx; */
}

.down_plate text {
    display: block;
    font-size: 26rpx;
    padding: 10rpx 45rpx;
}

.down_plate view {
    color: #ff4444;
    font-weight: 500;
}